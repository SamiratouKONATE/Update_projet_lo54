<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    
    <servlet>
        <servlet-name>servletAccueil</servlet-name>
        <servlet-class>utbm.projet.formation.servlets.ServletAccueil</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>servletAccueil</servlet-name>
        <url-pattern>/accueil</url-pattern>
    </servlet-mapping>
   
   <servlet>
        <servlet-name>servletCourseSession</servlet-name>
        <servlet-class>utbm.projet.formation.servlets.ServletCourseSession</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>servletCourseSession</servlet-name>
        <url-pattern>/formation</url-pattern>
    </servlet-mapping>
    
   
    <servlet>
        <servlet-name>servletClient</servlet-name>
        <servlet-class>utbm.projet.formation.servlets.ServletClient</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>servletClient</servlet-name>
        <url-pattern>/inscription</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>servletRecherche</servlet-name>
        <servlet-class>utbm.projet.formation.servlets.ServletRecherche</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>servletRecherche</servlet-name>
        <url-pattern>/recherche</url-pattern>
    </servlet-mapping>
    
    
    
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
